{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":maintainLockFilesWeekly",
    ":widenPeerDependencies",
    ":prHourlyLimit4",
    ":rebaseStalePrs",
    ":prNotPending"
  ],
  "lockFileMaintenance": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchCategories": ["js"],
      "matchPackagePatterns": ["*"],
      "groupName": "All Dev",
      "matchDepTypes": ["devDependencies"]
    },
    {
      "matchManagers": ["circleci"],
      "groupName": null,
      "automerge": true,
      "schedule": "before 6am on Monday"
    }
  ]
}
