{
  "name": "@mi11er/renovate-config",
  "version": "1.5.0",
  "description": "Renovate config for mi11er.net projects.",
  "keywords": [
    "renovate",
    "renovate-config"
  ],
  "homepage": "https://github.com/mi11er-net/renovate-config",
  "bugs": {
    "url": "https://github.com/mi11er-net/renovate-config/issues"
  },
  "repository": "https://github.com/mi11er-net/renovate-config.git",
  "license": "MIT",
  "author": "Matthew Miller <matthew@mi11er.net> (https://mi11er.net)",
  "files": [
    "default.json",
    "package.json",
    "README.MD",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "audit": "npm-audit-ci -c",
    "lint": "eslint --fix .",
    "lint-staged": "lint-staged",
    "pretty-quick": "pretty-quick --staged",
    "sort-package-json": "sort-package-json",
    "pretest": "run-s lint",
    "test": "run-s validate",
    "validate": "renovate-config-validator"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint-staged pretty-quick"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@capaj/npm-audit-ci": "1.0.5",
    "@mi11er/eslint-config": "2.4.1",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/exec": "5.0.0",
    "@semantic-release/git": "9.0.1",
    "commitizen": "3.1.2",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-optimize-regex": "1.2.1",
    "eslint-plugin-scanjs-rules": "0.2.1",
    "eslint-plugin-security": "1.7.1",
    "husky": "1.3.1",
    "lint-staged": "8.2.1",
    "npm-run-all2": "8.0.4",
    "prettier": "1.19.1",
    "pretty-quick": "1.11.1",
    "renovate": "16.1.1",
    "semantic-release": "19.0.3",
    "sort-package-json": "1.57.0"
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/changelog",
      {
        "path": "@semantic-release/npm",
        "tarballDir": "release"
      },
      {
        "path": "@semantic-release/exec",
        "cmd": "npx sort-package-json"
      },
      {
        "path": "@semantic-release/exec",
        "cmd": "npx pretty-quick"
      },
      {
        "path": "@semantic-release/git",
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "package-lock.json"
        ]
      }
    ],
    "publish": [
      "@semantic-release/npm",
      {
        "path": "@semantic-release/github",
        "assets": [
          {
            "path": "release/*.tgz",
            "label": "Package tarball"
          }
        ]
      }
    ]
  },
  "renovate": {
    "extends": [
      "github>mi11er-net/renovate-config"
    ]
  }
}
