{
  "name": "@mi11er/renovate-config",
  "version": "1.3.0",
  "description": "Renovate config for mi11er.net projects.",
  "keywords": [
    "renovate",
    "renovate-config"
  ],
  "homepage": "https://github.com/mi11er-net/renovate-config",
  "bugs": {
    "url": "https://github.com/mi11er-net/renovate-config/issues"
  },
  "repository": "https://github.com/mi11er-net/renovate-config.git",
  "license": "MIT",
  "author": "Matthew Miller <matthew@mi11er.net> (https://mi11er.net)",
  "files": [
    "package.json",
    "README.MD",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "audit": "npm-audit-ci -m",
    "precommit": "run-s lint-staged pretty-quick audit",
    "lint": "eslint --fix .",
    "lint-staged": "lint-staged",
    "sort-package-json": "sort-package-json",
    "test": "run-s audit",
    "pretty-quick": "pretty-quick --staged"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@capaj/npm-audit-ci": "1.0.5",
    "@mi11er/eslint-config": "2.3.0",
    "@semantic-release/changelog": "3.0.0",
    "@semantic-release/exec": "2.3.0",
    "@semantic-release/git": "7.0.1",
    "commitizen": "2.10.1",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "5.1.0",
    "eslint-config-airbnb-base": "13.0.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-no-unsafe-innerhtml": "1.0.16",
    "eslint-plugin-optimize-regex": "1.1.5",
    "eslint-plugin-scanjs-rules": "0.2.1",
    "eslint-plugin-security": "1.4.0",
    "husky": "0.14.3",
    "lint-staged": "7.2.0",
    "npm-run-all": "4.1.3",
    "prettier": "1.14.0",
    "pretty-quick": "1.6.0",
    "semantic-release": "15.8.1",
    "sort-package-json": "1.15.0"
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/changelog",
      {
        "path": "@semantic-release/npm",
        "tarballDir": "release"
      },
      {
        "path": "@semantic-release/exec",
        "cmd": "npx sort-package-json"
      },
      {
        "path": "@semantic-release/exec",
        "cmd": "npx pretty-quick"
      },
      {
        "path": "@semantic-release/git",
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "package-lock.json"
        ]
      }
    ],
    "publish": [
      "@semantic-release/npm",
      {
        "path": "@semantic-release/github",
        "assets": [
          {
            "path": "release/*.tgz",
            "label": "Package tarball"
          }
        ]
      }
    ]
  },
  "renovate": {
    "extends": [
      "@mi11er"
    ]
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        ":maintainLockFilesWeekly",
        ":widenPeerDependencies",
        ":prHourlyLimit4",
        ":rebaseStalePrs",
        ":prNotPending"
      ],
      "packageRules": [
        {
          "packagePatterns": "*",
          "groupName": "All Dev",
          "depTypeList": [
            "devDependencies"
          ],
          "circleci": {
            "enabled": true
          }
        },
        {
          "packagePatterns": [
            "eslint"
          ],
          "groupName": "eslint"
        },
        {
          "packagePatterns": [
            "semantic-release"
          ],
          "groupName": "semantic-release"
        }
      ],
      "circleci": {
        "enabled": false
      }
    }
  }
}
