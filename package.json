{
  "name": "@mi11er/renovate-config",
  "version": "1.5.0",
  "description": "Renovate config for mi11er.net projects.",
  "keywords": [
    "renovate",
    "renovate-config"
  ],
  "homepage": "https://github.com/mi11er-net/renovate-config",
  "bugs": {
    "url": "https://github.com/mi11er-net/renovate-config/issues"
  },
  "repository": "https://github.com/mi11er-net/renovate-config.git",
  "license": "MIT",
  "author": "Matthew Miller <matthew@mi11er.net> (https://mi11er.net)",
  "type": "module",
  "files": [
    "default.json",
    "package.json",
    "README.MD",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "lint": "eslint --fix .",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "pretty-quick": "pretty-quick --staged",
    "sort-package-json": "sort-package-json",
    "pretest": "run-s lint",
    "test": "run-s validate",
    "validate": "renovate-config-validator"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "master"
    ],
    "prepare": [
      "@semantic-release/changelog",
      {
        "path": "@semantic-release/npm",
        "tarballDir": "release"
      },
      {
        "path": "@semantic-release/exec",
        "cmd": "npx sort-package-json"
      },
      {
        "path": "@semantic-release/exec",
        "cmd": "npx pretty-quick"
      },
      {
        "path": "@semantic-release/git",
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "package-lock.json"
        ]
      }
    ],
    "publish": [
      "@semantic-release/npm",
      {
        "path": "@semantic-release/github",
        "assets": [
          {
            "path": "release/*.tgz",
            "label": "Package tarball"
          }
        ]
      }
    ],
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "7.1.0",
    "@semantic-release/git": "10.0.1",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-n": "17.23.1",
    "eslint-plugin-security": "3.0.1",
    "globals": "16.2.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "npm-run-all2": "8.0.4",
    "prettier": "3.7.3",
    "pretty-quick": "4.2.2",
    "renovate": "42.30.2",
    "semantic-release": "25.0.2",
    "sort-package-json": "3.5.0"
  },
  "renovate": {
    "extends": [
      "github>mi11er-net/renovate-config"
    ]
  }
}
