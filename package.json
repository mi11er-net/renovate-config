{
  "name": "@mi11er/renovate-config",
  "version": "1.5.0",
  "description": "Renovate config for mi11er.net projects.",
  "keywords": [
    "renovate",
    "renovate-config"
  ],
  "homepage": "https://github.com/mi11er-net/renovate-config",
  "bugs": {
    "url": "https://github.com/mi11er-net/renovate-config/issues"
  },
  "repository": "https://github.com/mi11er-net/renovate-config.git",
  "license": "MIT",
  "author": "Matthew Miller <matthew@mi11er.net> (https://mi11er.net)",
  "files": [
    "package.json",
    "README.MD",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "audit": "npm-audit-ci -c",
    "lint": "eslint --fix .",
    "lint-staged": "lint-staged",
    "pretty-quick": "pretty-quick --staged",
    "sort-package-json": "sort-package-json",
    "pretest": "run-s lint",
    "test": "run-s validate audit",
    "validate": "renovate-config-validator"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint-staged pretty-quick audit"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@capaj/npm-audit-ci": "1.0.5",
    "@mi11er/eslint-config": "2.4.1",
    "@semantic-release/changelog": "3.0.2",
    "@semantic-release/exec": "3.3.2",
    "@semantic-release/git": "7.0.8",
    "commitizen": "3.1.1",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-no-unsafe-innerhtml": "1.0.16",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-optimize-regex": "1.1.6",
    "eslint-plugin-scanjs-rules": "0.2.1",
    "eslint-plugin-security": "1.4.0",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "npm-run-all": "4.1.5",
    "prettier": "1.17.0",
    "pretty-quick": "1.10.0",
    "renovate": "25.56.7",
    "semantic-release": "15.13.3",
    "sort-package-json": "1.22.1"
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/changelog",
      {
        "path": "@semantic-release/npm",
        "tarballDir": "release"
      },
      {
        "path": "@semantic-release/exec",
        "cmd": "npx sort-package-json"
      },
      {
        "path": "@semantic-release/exec",
        "cmd": "npx pretty-quick"
      },
      {
        "path": "@semantic-release/git",
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "package-lock.json"
        ]
      }
    ],
    "publish": [
      "@semantic-release/npm",
      {
        "path": "@semantic-release/github",
        "assets": [
          {
            "path": "release/*.tgz",
            "label": "Package tarball"
          }
        ]
      }
    ]
  },
  "renovate": {
    "extends": [
      "@mi11er"
    ]
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        ":maintainLockFilesWeekly",
        ":widenPeerDependencies",
        ":prHourlyLimit4",
        ":rebaseStalePrs",
        ":prNotPending"
      ],
      "lockFileMaintenance": {
        "automerge": true
      },
      "packageRules": [
        {
          "languages": [
            "js"
          ],
          "packagePatterns": "*",
          "groupName": "All Dev",
          "depTypeList": [
            "devDependencies"
          ]
        },
        {
          "managers": [
            "circleci"
          ],
          "groupName": null,
          "automerge": true,
          "schedule": "before 6am on Monday"
        }
      ]
    }
  }
}
